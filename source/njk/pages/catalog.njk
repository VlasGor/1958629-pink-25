  <section class="form-post page-main__form-post">
    <form class="form-post__form" action="https://echo.htmlacademy.ru" method="post">
      <p class="form-post__add">
        <label class="visually-hidden">
          Запостите свою фотографию.
          <input class="visually-hidden" type="file" >
        </label>
      </p>

      <h2 class="visually-hidden">
        Редактирование фотографии.
      </h2>

      <p class="form-post__control">
        <label class="form-post__label">
          <span class="visually-hidden">
            Обрезать.
          </span>
          <input class="form-post__input" type="range" name="cut" min="1" max="100" value="80" >
        </label>
      </p>

      <p class="form-post__control">
        <label class="form-post__label">
          <span class="visually-hidden">
            Оттенок.
          </span>
          <input class="form-post__input" type="range" name="shade" min="1" max="100" value="20" >
        </label>
      </p>

      <p class="form-post__control">
        <label class="form-post__label">
          <span class="visually-hidden">
            Контраст.
          </span>
          <input class="form-post__input" type="range" name="contrast" min="1" max="100" value="50" >
        </label>
      </p>

      <p class="form-post__button-block">
        <button class="form-post__button" type="submit">
          Запостить
        </button>

        <button class="form-post__button form-post__button--reset" type="reset">
          Отмена
        </button>
      </p>
    </form>
